rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /team-logos/{leagueId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null
        && request.auth.token.role == 'admin'
        && request.resource.size < 2 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
    }
  }
}
